@model IEnumerable<Queima.Web.App.ViewModels.ArtistaViewModel>
<meta charset="utf-8" />
@{
    ViewData["Title"] = "Lista de Artistas";
}

<h2>Lista de Artistas</h2>

<p>
    <a asp-action="Create">Adicionar novo Artista</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAtuacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Palco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAtuacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Palco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
