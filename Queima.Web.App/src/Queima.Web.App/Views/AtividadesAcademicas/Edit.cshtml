@model Queima.Web.App.ViewModels.AtividadeAcademicaViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<form asp-action="Edit"  enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Atividade Académica</h4>
        <input type="hidden" asp-for="ImagemPath" />
        <input type="hidden" asp-for="ImagemUrl" />
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Data" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Preco" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SelectedLocalId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SelectedLocalId" class="form-control" asp-items="ViewBag.LocalAtividadeAcademicaId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PontosVenda" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PontosVenda" class="form-control" />
                <span asp-validation-for="PontosVenda" class="text-danger" />
            </div>
        </div>
        <img src="@Url.Content(Model.ImagemPath)" alt="Não tem nenhuma imagem associada" asp-append-version="true" />
        <div class="form-group">
            <label asp-for="Imagem" class="control-label col-md-2"></label>
            <div>
                <input asp-for="Imagem" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
<script type="text/javascript">
        $(document).ready(function () {
            $("#Data").datepicker({ dateFormat: 'dd/mm/yy' });
        });
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
