@model Queima.Web.App.ViewModels.MediaViewModel

@{
    ViewData["Title"] = "Apagar Media";
}

<h2>Apagar</h2>

<h3>Tem a certeza que quer apagar este Álbum ou Video?</h3>
<div>
    <h4>Media</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-md-9">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-md-9">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class="col-md-9">
            @Html.DisplayNameFor(model => model.TipoMedia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipoMedia)
        </dd>
        <dt class="col-md-9">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
